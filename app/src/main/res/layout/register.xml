<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSCRIPTION"
            android:textSize="40sp"
            android:textColor="#5e7974"
            android:layout_margin="30sp"/>

        <EditText
            android:id="@+id/user_mail"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:padding="10sp"
            android:background="@drawable/bordertextviewform"
            android:textSize="18sp"
            android:hint="Email / pseudo"/>

        <EditText
            android:id="@+id/user_password"
            android:inputType="textPassword"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:padding="10sp"
            android:background="@drawable/bordertextviewform"
            android:textSize="18sp"
            android:hint="Mot de passe"/>
        <EditText
            android:id="@+id/user_repassword"
            android:inputType="textPassword"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:padding="10sp"
            android:background="@drawable/bordertextviewform"
            android:textSize="18sp"
            android:hint="Retapez le mot de passe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:text="Tu as déjà un compte ?" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="Se connecter ici"
            android:onClick="toLoginClick"
            android:clickable="true"
            android:textStyle="bold"/>

        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:background="@drawable/buttonsubmitform"
            android:text="S'enregistrer"
            android:textColor="@color/white"
            android:id="@+id/registerButton"
            android:onClick="buttonRegisterClicked"/>
    </LinearLayout>

</LinearLayout>